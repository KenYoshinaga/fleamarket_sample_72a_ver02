.header__menu
  = render partial: 'displays/header'

.wrap.page_search
  = render 'searches/form_search'
  .search-container.clearfix
    .search-result
      %section.items-box-container
        -if @search.present?
          %h2.search-result-head
            =@search
            %span.search-result-head-text
              の検索結果
          .search-result-number
            ="1-#{@items.count}件表示"
        -else
          %h2.search-result-nil
            検索結果
          .search-result-number
            ="1-#{@items.count}件表示"
        .items-box-content
          = render @items

.banner
  = render partial: 'displays/banner'

.footer__menue 
  =render partial: 'displays/footer'