= form_tag(action: :pay, method: :post) do
  %script.payjp-button{:src => "https://checkout.pay.jp", :type => "text/javascript" ,"data-text" => "購入する" ,"data-key" => "pk_test_3ebd06a552bf3c90542f2dfc"}
.wrap.page_credit_card.one_col.page_form
  .logo_wrap
    .logo
      = image_tag("logo.png", alt: "ロゴ")
  .contents_box
    %h2.content_ttl
      お支払い方法
    .form
      .form__inner
        .field
          = form_tag(pay_cards_path, method: :post, id: 'charge-form',  name: "inputForm") do
            .field-list
              %label.card-number.required
                %label カード番号
                = text_field_tag "number", "", class: "number", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
              %ul.card_wrap
                %li
                  = image_tag("card/visa.svg", alt: "visa")
                %li
                  = image_tag("card/master.svg", alt: "master")
                %li
                  = image_tag("card/saison.svg", alt: "saison")
                %li
                  = image_tag("card/amex.svg", alt: "amex")
                %li
                  = image_tag("card/diners.svg", alt: "diners")
                %li
                  = image_tag("card/discover.svg", alt: "discover")
            .field-list
              %label.birthday.required
                有効期限
              %ul#set_2coluum.birthday_select
                %li.f_half.month
                  %select#exp_month{name: "exp_month", type: "text"}
                    %option{value: ""} --
                    %option{value: "1"}01
                    %option{value: "2"}02
                    %option{value: "3"}03
                    %option{value: "4"}04
                    %option{value: "5"}05
                    %option{value: "6"}06
                    %option{value: "7"}07
                    %option{value: "8"}08
                    %option{value: "9"}09
                    %option{value: "10"}10
                    %option{value: "11"}11
                    %option{value: "12"}12
                
                %li.f_half.year
                  %select#exp_year{name: "exp_year", type: "text"}
                    %option{value: ""} --
                    %option{value: "2020"}20
                    %option{value: "2021"}21
                    %option{value: "2022"}22
                    %option{value: "2023"}23
                    %option{value: "2024"}24
                    %option{value: "2025"}25
                    %option{value: "2026"}26
                    %option{value: "2027"}27
                    %option{value: "2028"}28
                    %option{value: "2029"}29
                    %option{value: "2030"}30

            .field-list
              %label.security_cord.required                 
                セキュリティコード
                = text_field_tag "cvc", "", class: "cvc", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
                #card_token
                = submit_tag "登録する", id: "token_submit"