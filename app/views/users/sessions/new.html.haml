.wrap.page_login.one_col.page_form
  .logo_wrap
    %h1.logo
      = image_tag("logo.png", alt: "ロゴ")
  .contents_box.mini
    .form
      .form_info_top
        .form_inner
          %p
            アカウントをお持ちでない方はこちら
          %ul.btn_wrap
            -# %li.btn_style
            -#  = link_to "新規会員登録", new_registration_path(resource_name)

            %li.btn_style
              = link_to "/static/regist", class: '' do
                新規会員登録

      .form_inner
        = form_for(resource, class:'', as: resource_name, url: session_path(resource_name)) do |f|
          %ul.field
            %li.field_list
              = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス"
            %li.field_list
              = f.password_field :password, placeholder: "パスワード", autocomplete: "current-password"
            /- if devise_mapping.rememberable?
            / .field
            /    = f.check_box :remember_me
            /    = f.label :remember_me
            %ul.btn_wrap
              %li.btn_style
                = f.submit "ログイン"
            
        .info_bottom
          %ul
            %li
              = link_to "パスワードをお忘れの方", new_password_path(resource_name)
