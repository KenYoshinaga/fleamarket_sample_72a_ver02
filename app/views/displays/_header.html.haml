.header__menu
  .header__menu__inner
    .header__menu__inner__main
      .header__menu__inner__main__icon
        %a{href: '/'}
          =image_tag 'logo.png', class: 'furima-logo', size: '140x40'
      .header__menu__inner__main__search-box
        %input.header__menu__inner__main__search-box--input{:id => "searchInput", :name => "key", :placeholder => "キーワードから探す"}/
        .header__menu__inner__main__search-box--search
          %a{href: '#'}
            =image_tag 'icon-search 1.png', class: 'search-icon', size: '19x19'
    .header__menu__inner__navi
      %ul.leftLists
        %li.leftLists__category
          = link_to 'カテゴリー'
        %li.leftLists__bland
          %a{href: '#'} ブランド
      %ul.rightLists
        %li.rightLists__login
        - if user_signed_in?
          %li.rightLists__my_page
            = link_to "マイページ", user_path(current_user.id), class: 'btn'
          %li.rightLists__logout
            = link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'btn'
        - else
          %li.rightLists__login
            = link_to "ログイン", new_session_path(resource_name), class: 'btn'
          %li.rightLists__new
            = link_to "新規会員登録", new_registration_path(resource_name), class: 'btn'